.header_flex{
    display: flex;

}
.header_left{    
    /* position: absolute; */
    top: -14px;
    left: 15px;
    width: 50px;
    height: 50px;
    border-radius: 50%;
    background-color: #ffffff;
    /* padding: 3px 0 0 3px; */
    margin-right:10px; 
    display: flex;
    justify-content: center;
    align-items: center;
}
.header_logo{
    width: 40px;
    height: 40px;
    border-radius: 50%;

}
.header_name{
    /* background-color: #0002ed !important; */
    color: #ffffff;
    font-size: 11pt;
    font-weight: bolder;
    border-radius: 15px;
    padding: 5px 5px;
}
.header_des ,.header_date{
    text-align: center;
}
.header_des{
   /* background-color: #1d2a6d !important; */
    color: #ffffff;
    font-size: 15pt;
    font-weight: bolder;
    border-radius: 15px;
    /* padding: 5px 15px; */
}
.header_date{
    color: #ffffff;
    font-size: 11pt;
    border-radius: 15px;
    margin-top: 10px;
}

.header_footer{font-size: 9pt;}

