/* components/header/header.wxss */



.header{
    width: 750rpx;
    /* height: 150rpx; */
    /* background-color: #3c4bff; */
    padding:0 15px 0;
    position: relative;
}


.title{
    display: flex;
    /* justify-content: space-between; */
    justify-content: center;
    align-items: center;
}

.title_img{
    width: 110px;
}
.des{
    display: flex;
    justify-content: center;
    margin-top:10px;
}
.des_img{
    width: 700rpx;
}


.name{
    margin-top:20px;
    display: flex;
    /* justify-content: center; */
    justify-content: space-between;
    align-items: center;
    font-size: 18pt;
    font-weight: bolder;
}


.meat ,.vegetable{
    width:23px;
    height: 23px;
}

