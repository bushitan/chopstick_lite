<header logo="{{store.logo}}" name="{{store.name}}" slogan="{{store.slogan}}"></header>


<view wx-if="{{TabCur==0}}">
    <view class="" style="height:10px;"></view>

    <!-- <view class="" style="height:10px;"></view> -->
    <notic text="{{store.notic}}"></notic>

    <view wx:if="{{food}}">
        <food-current bindmore="toMore">        
            <food-card food="{{food}}"></food-card>  
        </food-current>
    </view>
    <view wx:else>        
        <food-current bindmore="toMore" >        
        </food-current>
    </view>


    <view class="employee cu-card">
        <view class="cu-item">
            <view class="cu-bar bg-white solid-bottom ">
                <view class="action">
                    <text class="cuIcon-group_fill text-green  margin-right-xs"></text>制作人员健康实时监控
                </view>
            </view>
            <view class="cu-list menu no-card ">
                <navigator url="" class="cu-item bg-white employee-item "  wx:for="{{employeeList}}" wx:key="index" catchtap="toStore" data-store_uuid="{{item.storeUUID}}">
                    <!-- arrow <view class="cu-avatar round lg" style="background-image:url({{item.storeLogo}});"></view> -->
                    <image class="cu-avatar round lg" src="{{item.avatar}}"></image>
                    <view class="content">
                        <view class="text-grey">{{item.name}}</view>
                        <view class="text-gray text-sm flex">
                        <text class="text-cut">
                        <text class="cuIcon-vipcard text-blue  margin-right-xs"></text>{{item.post}}
                        </text>
                        </view>
                    </view>
                    <view class="action">
                        <view class="text-grey text-xs">当前体温</view>
                        <view class="cu-tag round bg-green page-font-white sm">{{item.temperature}}°</view>
                    </view>
                </navigator>
            </view>
        </view>
    </view>
</view>

